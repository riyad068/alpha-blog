<%= form_with(model: @user) do |form| %>
    <% if @user.errors.any? %>
      <div id="error_explanation"> 
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
  
        <ul> 
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul> 
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :username %>
      <%= form.text_field :username, placeholder: "Enter a username" %>
    </div>
  
    <div class="field">
      <%= form.label :email %>
      <%= form.email_field :email ,placeholder: "Enter your email address" %>
    </div>

    <div class="field">
      <%= form.label :password %> 
      <%= form.password_field :password, placeholder: "Choose a password" %>
    </div> 
  
    <div class="actions">
      <%= form.submit(@user.new_record? ?  "Sign up" : "Update Account" ,class: "btn btn-outline-light btn-lg") %>
    </div>
  <% end %>
  